<div class="container w-500 m-3 p-3 ps-3 text-center justify-content-center">
  <h1>New Game</h1>
  <div class="tiles">
    <% @letters.each do |letter| %>
      <span><%= letter %></span>
    <% end %>
  </div>

  <p class="mt-3 mb-0">What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join %>

  <div class="input-group mb-3 pt-3">
      <input type="text" class="form-control justify-content-center" name="user_input" placeholder="Enter a word">
      <div class="input-group-append">
        <button class="btn btn-outline-success" type="submit">Play</button>
      </div>
    </div>
  </form>
</div>
